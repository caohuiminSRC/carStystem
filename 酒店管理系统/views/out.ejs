<script type="text/javascript">
    //查找房间
    $("#findBtn").click(function () {
        $.get("/admin/room/outFind?cid="+$("#xuhaoTxt").val(),function (data) {
            console.log(data.result);
            if(data.result==undefined){
                alert("没有该房间或者该房间未入住")
                return;
            }else{
                var directory=data.result;
                //计算天数差的函数，通用
                function DateDiff(sDate1, sDate2) { //sDate1和sDate2是2017-9-25格式
                    var aDate, oDate1, oDate2, iDays
                    aDate = sDate1.split("-")
                    oDate1 = new Date(aDate[1] + '-' + aDate[2] + '-' + aDate[0]) //转换为9-25-2017格式
                    aDate = sDate2.split("-")
                    oDate2 = new Date(aDate[1] + '-' + aDate[2] + '-' + aDate[0])
                    iDays = parseInt(Math.abs(oDate1 - oDate2) / 1000 / 60 / 60 / 24) //把相差的毫秒数转换为天数
                    return iDays
                }
                //调用
                s1  = directory.end.slice(0,10)
                s2  = directory.start.slice(0,10)
                directory.day=DateDiff(s1,s2)
                $(".ID").html(directory.ID)
                $(".sid").html(directory.sid)
                $(".name").html(directory.pwText)
                $(".sex").html(directory.sex)
                $(".roomNumber").html(directory.Roomnumber)
                $(".meal").html(directory.meal)
                $(".start").html(directory.start.slice(0,10))
                $(".checkin").html(directory.checkin)
                $(".day").html(directory.day)
                $(".price").html(directory.price)
                $(".total").html(parseInt(directory.day)*parseInt(directory.price))
                $("#checkout").attr("data-id",directory._id)
            }
        })
    })
    //确认退房
    $("#checkout").click(function () {
        var _id=$(this).attr("data-id");
        $.get("/admin/room/chekout?_id="+_id,function (data) {
            if(data.result==1){
                alert("退房成功")
            }else{
                alert("退房失败")
            }
        })
    })

    //退出登录
    $("#quit").click(function(){
        if(confirm("你确定要退出吗？")){
            $.get("/quit",function(data){
                if(data.result == 1){
                    alert("退出成功")
                    window.location = '/'
                }else{
                    alert("退出失败")
                }
            })
        }
    })
</script>
